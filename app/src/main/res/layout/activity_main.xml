<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/fragment_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f6f5f4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d3d3d3"/>
        <LinearLayout
            android:id="@+id/bottom_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal"
            android:background="#eeedec">
            <LinearLayout
                android:id="@+id/bottom_bt_ceno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_ceno_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/cloud"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_ceno_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#55c0d8"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:text="@string/cenocloud"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_bt_console"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_console_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/console"
                    android:padding="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_console_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#55c0d8"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/console"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_bt_self"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/bottom_bt_self_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/me"
                    android:padding="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/bottom_bt_self_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#55c0d8"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/my"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>