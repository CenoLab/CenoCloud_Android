<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#383d41"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_bt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:text="实例名称"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/more_bt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/more_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#383d41"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="详情"
                    android:textColor="#55c0d8"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="#55c0d8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="#00ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="#00ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="#00ffffff" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#f5f4f3"
                android:text="基本信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="名称："/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="状态："/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="公司："/>
                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="实例ID："/>
                <TextView
                    android:id="@+id/productKey"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="产品类型："/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="描述："/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#f5f4f3"
                android:text="技术信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="接入方式："/>
                <TextView
                    android:id="@+id/tech"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="数据类型："/>
                <TextView
                    android:id="@+id/trans"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#f5f4f3"
                android:text="连接信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="最大连接数："/>
                <TextView
                    android:id="@+id/maxConnect"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="总连接数："/>
                <TextView
                    android:id="@+id/currentConn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="当前在线数："/>
                <TextView
                    android:id="@+id/currentOnline"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="消息总数："/>
                <TextView
                    android:id="@+id/messageCount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#f5f4f3"
                android:text="付费信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="付费方式："/>
                <TextView
                    android:id="@+id/fufeifangshi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="按连接点数包年"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="创建时间："/>
                <TextView
                    android:id="@+id/createTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:text="加载中..."/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f4f3"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>